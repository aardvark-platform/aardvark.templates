{
  "$schema": "http://json.schemastore.org/template",
  "author": "Aardvark Platform Team",
  "classifications": [ "Aardvark" ], 
  "name": "Aardvark.UI Application",
  "identity": "Aardvark.Template.UI.FSharp",         
  "groupIdentity": "Aardvark.Template.UI",
  "shortName": "aardvark.ui",
  "tags": {
    "language": "F#",
    "type": "project"
  },
  "sourceName": "Aardvark.Template.UI",
  "preferNameDirectory": true,
  "symbols": {
    "backend": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "opengl",
      "choices": [
        {
          "choice": "opengl"
        },
        {
          "choice": "vulkan"
        }
      ],
      "description": "Graphical API will be used for rendering your application"
    }
  },
  "sources": [
    {
      "exclude": [ "OpenGL/**", "Vulkan/**", ".template.config/**/*"],
      "modifiers":[
        {
          "include": ["OpenGL/**", "OpenGL/.config/**", "OpenGL/src/**"],
          "exclude": [
            "OpenGL/.paket/**",
            "OpenGL/paket-files/**",
            "OpenGL/Aardvark.log",
            "OpenGL/src/[Bb]in/**",
            "OpenGL/src/[Oo]bj/**"
          ],
          "condition": "(backend == \"opengl\")",
          "rename": {"OpenGL/.config/dotnet-tools.json": ".config/dotnet-tools.json",
            "OpenGL/paket.dependencies": "paket.dependencies",
            "OpenGL/paket.lock": "paket.lock",
            "OpenGL/.gitignore": ".gitignore",

            "OpenGL/src/Aardvark.Template.UI/Aardvark.Template.UI.fsproj": "src/Aardvark.Template.UI/Aardvark.Template.UI.fsproj",
            "OpenGL/src/Aardvark.Template.UI/Model.fs": "src/Aardvark.Template.UI/Model.fs",
            "OpenGL/src/Aardvark.Template.UI/App.fs": "src/Aardvark.Template.UI/App.fs",
            "OpenGL/src/Aardvark.Template.UI/Program.fs": "src/Aardvark.Template.UI/Program.fs",
            "OpenGL/src/Aardvark.Template.UI/paket.references": "src/Aardvark.Template.UI/paket.references"}
        },
        {
          "include": ["Vulkan/**", "Vulkan/.config/**", "Vulkan/src/**"],
          "exclude": [
            "Vulkan/.paket/**",
            "Vulkan/paket-files/**",
            "Vulkan/Aardvark.log",
            "Vulkan/src/[Bb]in/**",
            "Vulkan/src/[Oo]bj/**"
          ],
          "condition": "(backend == \"vulkan\")",
          "rename": {"Vulkan/.config/dotnet-tools.json": ".config/dotnet-tools.json",
            "Vulkan/paket.dependencies": "paket.dependencies",
            "Vulkan/paket.lock": "paket.lock",
            "Vulkan/.gitignore": ".gitignore",

            "Vulkan/src/Aardvark.Template.UI/Aardvark.Template.UI.fsproj": "src/Aardvark.Template.UI/Aardvark.Template.UI.fsproj",
            "Vulkan/src/Aardvark.Template.UI/Model.fs": "src/Aardvark.Template.UI/Model.fs",
            "Vulkan/src/Aardvark.Template.UI/App.fs": "src/Aardvark.Template.UI/App.fs",
            "Vulkan/src/Aardvark.Template.UI/Program.fs": "src/Aardvark.Template.UI/Program.fs",
            "Vulkan/src/Aardvark.Template.UI/paket.references": "src/Aardvark.Template.UI/paket.references"}
        }
      ]
    }
  ]
}